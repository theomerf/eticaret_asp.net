@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    :root {
        --primary-gradient: linear-gradient(45deg, #6a11cb, #2575fc);
        --transition: all 0.3s ease;
    }

    /* Genel Stillemeler */
    .section-title {
        font-weight: 700;
        color: #343a40;
        position: relative;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 70px;
            height: 4px;
            background: var(--primary-gradient);
            border-radius: 2px;
        }

    .section-subtitle {
        color: #6c757d;
        margin-bottom: 2.5rem;
    }

    .content-section {
        padding: 4rem 0;
    }

    /* Slayt Galerisi */
    .carousel-section {
        padding: 2rem 0 4rem 0;
    }

    .carousel-item img {
        height: 500px;
        object-fit: cover;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

    .carousel-caption {
        background: linear-gradient(to right, rgba(106, 17, 203, 0.7), rgba(37, 117, 252, 0.7));
        border-radius: 10px;
        padding: 20px;
        bottom: 40px;
        max-width: 70%;
        margin: 0 auto;
        left: 15%;
        right: 15%;
    }

    .carousel-control-prev, .carousel-control-next {
        width: 50px;
        height: 50px;
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
    }

    .carousel-control-prev {
        left: 20px;
    }

    .carousel-control-next {
        right: 20px;
    }

    .carousel-indicators button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin: 0 5px;
        background-color: rgba(255, 255, 255, 0.7);
    }

    .carousel-indicators .active {
        background-color: white;
        width: 15px;
        height: 15px;
    }

    /* Marka Butonlarý */
    .brands-section {
        background-color: #f8f9fa;
        padding: 4rem 0;
    }

    .brand-btn {
        background: var(--primary-gradient);
        color: white;
        border: none;
        padding: 1.5rem;
        font-size: 1.25rem;
        font-weight: 600;
        border-radius: 15px;
        transition: var(--transition);
        width: 100%;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

        .brand-btn:hover {
            transform: translateY(-7px);
            box-shadow: 0 15px 30px rgba(106, 17, 203, 0.3);
        }

    /* Kategori Kartlarý */
    .categories-section {
        padding: 4rem 0;
        background-color: white;
    }

    .category-card {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        height: 200px;
        transition: var(--transition);
    }

        .category-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }

        .category-card:hover img {
            transform: scale(1.1);
        }

    .category-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 20px;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
        color: white;
        transition: var(--transition);
    }

    .category-card:hover .category-overlay {
        background: linear-gradient(to top, rgba(106, 17, 203, 0.8), rgba(37, 117, 252, 0.4), transparent);
    }

    .category-title {
        font-weight: 600;
        margin-bottom: 5px;
        font-size: 1.25rem;
    }

    .category-count {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* Vitrin / Öne Çýkan Ürünler */
    .showcase-section {
        background-color: #f8f9fa;
        padding: 4rem 0;
    }

    .bg-gradient-primary {
        background: var(--primary-gradient);
    }

    .text-gradient {
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Kampanya Bölümü */
    .campaign-section {
        padding: 5rem 0;
        background: var(--primary-gradient);
        color: white;
        text-align: center;
    }

    .campaign-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .campaign-text {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto 2rem auto;
        opacity: 0.9;
    }

    .campaign-btn {
        background-color: white;
        color: #6a11cb;
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        border-radius: 30px;
        transition: var(--transition);
        font-size: 1.1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .campaign-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    /* Özellikler Bölümü */
    .features-section {
        padding: 4rem 0;
    }

    .feature-card {
        text-align: center;
        padding: 2rem;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: var(--transition);
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(106, 17, 203, 0.15);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: var(--primary-gradient);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 20px auto;
        font-size: 2rem;
    }

    .feature-title {
        font-weight: 600;
        font-size: 1.3rem;
        margin-bottom: 15px;
    }

    .feature-text {
        color: #6c757d;
    }

    /* Bülten Aboneliði */
    .newsletter-section {
        padding: 4rem 0;
        background-color: #f8f9fa;
        text-align: center;
    }

    .newsletter-form {
        max-width: 600px;
        margin: 0 auto;
        position: relative;
    }

    .newsletter-input {
        width: 100%;
        padding: 15px 20px;
        border: none;
        border-radius: 30px;
        font-size: 1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .newsletter-button {
        position: absolute;
        right: 5px;
        top: 5px;
        bottom: 5px;
        background: var(--primary-gradient);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 0 25px;
        font-weight: 600;
        transition: var(--transition);
    }

        .newsletter-button:hover {
            box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
        }
</style>

