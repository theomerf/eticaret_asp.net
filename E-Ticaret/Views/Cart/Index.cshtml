@model Cart

<div class="container my-4">
    <div class="row">
        <!-- Sol Bölüm: Sepetteki Ürünler -->
        <div class="col-lg-8">
            @if (Model.Lines != null && Model.Lines.Any())
            {
                foreach (var line in Model.Lines)
                {
                    <div class="card mb-3">
                        <div class="row g-0 align-items-center">
                            <!-- Ürün Fotoğrafı (Küçültülmüş Boyutta) -->
                            <div class="col-md-3 text-center">
                                <img src="/images/@line.Product.ImageUrl" class="img-fluid rounded-start" style="max-width: 100px;" alt="@line.Product.ProductName" onerror="this.onerror=null;this.src='https://via.placeholder.com/100';">
                            </div>
                            <!-- Ürün Detayları -->
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title">@line.Product.ProductName</h5>
                                    <!-- Adet Kontrol Grubu -->
                                    <div class="d-flex align-items-center">
                                        @if (line.Quantity == 1)
                                        {
                                            <!-- Adet kontrolü: Adedi 1 iken, artı butonu yuvarlak siyah kenarlıklı konteyner içinde, yanında çöp kutusu -->
                                            <div class="d-inline-flex align-items-center" style="border: 1px solid #000; border-radius: 50px; overflow: hidden;">
                                                <span class="px-3 py-1" style="min-width: 40px; text-align: center;">@line.Quantity</span>
                                                <form asp-action="IncreaseQuantity" method="post" class="m-0">
                                                    <input type="hidden" name="id" value="@line.Product.ProductId" />
                                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                                    <button type="submit" class="btn-no-color btn-sm">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            <form asp-action="RemoveFromCart" method="post" class="ms-2">
                                                <input type="hidden" name="id" value="@line.Product.ProductId" />
                                                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                                <button type="submit" class="btn-trash btn-sm" title="Ürünü Sil">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- Adedi 2 ve üzeri: - ve + butonları yuvarlak siyah kenarlıklı konteyner içinde, yanında çöp kutusu -->
                                            <div class="d-inline-flex align-items-center" style="border: 1px solid #000; border-radius: 50px; overflow: hidden;">
                                                <form asp-action="DecreaseQuantity" method="post" class="m-0">
                                                    <input type="hidden" name="id" value="@line.Product.ProductId" />
                                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                                    <button type="submit" class="btn-no-color btn-sm">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                </form>
                                                <span class="px-3 py-1" style="min-width: 40px; text-align: center;">@line.Quantity</span>
                                                <form asp-action="IncreaseQuantity" method="post" class="m-0">
                                                    <input type="hidden" name="id" value="@line.Product.ProductId" />
                                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                                    <button type="submit" class="btn-no-color btn-sm">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            <form asp-action="RemoveFromCart" method="post" class="ms-2">
                                                <input type="hidden" name="id" value="@line.Product.ProductId" />
                                                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                                <button type="submit" class="btn-trash btn-sm" title="Ürünü Sil">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                    <!-- Ürün Fiyatı -->
                                    <div class="mt-2 text-end fw-bold">
                                        @line.Product.ActualPrice.ToString("c")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">Sepetinizde ürün bulunmamaktadır.</div>
            }
        </div>

        <!-- Sağ Bölüm: Sipariş Özeti (Yüksekliği Artırıldı) -->
        <div class="col-lg-4">
            <div class="card" style="min-height: 350px;">
                <div class="card-header bg-light">
                    <h4>Sipariş Özeti (@Model.Lines.Count.ToString())</h4>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="mb-5">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Toplam Tutar:</span>
                                <strong>@Model.ComputeTotalValue().ToString("c2")</strong>
                            </li>
                        </ul>
                    </div>
                    <div class="d-grid gap-2 mt-5">
                        <a class="btn btn-success btn-lg" asp-action="Checkout" asp-controller="Order">
                            Ödeme Yap <i class="fa fa-credit-card"></i>
                        </a>
                    </div>
                    <div class="d-grid gap-2">
                        <a class="btn btn-danger btn-lg" href="@ViewBag.ReturnUrl">
                            Alışverişe Devam Et <i class="fa fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
