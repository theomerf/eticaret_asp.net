@if (TempData["info"] is not null)
{
    <div class="custom-alert custom-alert-info my-3 shadow-sm animate__animated animate__fadeIn" role="alert">
        <div class="alert-icon">
            <i class="fas fa-info-circle"></i>
        </div>
        <div class="alert-content">
            <h6 class="alert-heading mb-1">Bilgi</h6>
            <p class="mb-0">@TempData["info"]</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["success"] is not null)
{
    <div class="custom-alert custom-alert-success my-3 shadow-sm animate__animated animate__fadeIn" role="alert">
        <div class="alert-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="alert-content">
            <h6 class="alert-heading mb-1">Başarılı</h6>
            <p class="mb-0">@TempData["success"]</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["danger"] is not null)
{
    <div class="custom-alert custom-alert-danger my-3 shadow-sm animate__animated animate__fadeIn" role="alert">
        <div class="alert-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="alert-content">
            <h6 class="alert-heading mb-1">Hata</h6>
            <p class="mb-0">@TempData["danger"]</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
