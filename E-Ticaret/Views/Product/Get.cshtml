@model ProductDetail
<div class="container-fluid product-container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="/kategori">Kategoriler</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Product.ProductName</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Ürün Fotoğrafı ve Galeri -->
        <div class="col-lg-6">
            <div class="product-image-gallery">
                <div class="main-image-container">
                    <div class="discount-tag">
                        <span>%@Model.Product.Discount</span>
                        <span>indirim</span>
                    </div>
                    <div class="wishlist-icon">
                        <i class="far fa-heart"></i>
                    </div>
                    <img src="/images/@Model.Product.ImageUrl" class="main-image" alt="@Model.Product.ProductName" />
                </div>
                <div class="thumbnail-gallery">
                    <img src="/images/@Model.Product.ImageUrl" class="thumbnail active" alt="Thumbnail 1" />
                    <img src="/images/@Model.Product.ImageUrl" class="thumbnail" alt="Thumbnail 2" />
                    <img src="/images/@Model.Product.ImageUrl" class="thumbnail" alt="Thumbnail 3" />
                    <img src="/images/@Model.Product.ImageUrl" class="thumbnail" alt="Thumbnail 4" />
                </div>
            </div>
        </div>

        <!-- Ürün Detayları -->
        <div class="col-lg-6">
            <div class="product-details">
                <div class="product-meta">
                    <span class="product-sku">SKU: #12345</span>
                    <span class="product-availability in-stock"><i class="fas fa-check-circle"></i> Stokta</span>
                </div>

                <h1 class="product-title">@Model.Product.ProductName</h1>

                <!-- Yıldız Puanlama -->
                <div class="productdetail-rating">
                    <div class="star-rating">
                        @await Component.InvokeAsync("RatingStars", new { productId = Model.Product.ProductId, Mode = "stars" })
                    </div>
                    <span class="rating-count">
                        @await Component.InvokeAsync("RatingStars", new { productId = Model.Product.ProductId, Mode = "average" }) (@await Component.InvokeAsync("RatingStars", new { productId = Model.Product.ProductId, Mode = "count" }) Değerlendirme )
                    </span>
                </div>

                <div class="product-price-container">
                    <span class="productdetail-old-price">@Model.Product.ActualPrice.ToString("c")</span>
                    <span class="product-price">@Model.Product.DiscountPrice?.ToString("c")</span>
                    <span class="price-discount">%@Model.Product.Discount indirim</span>
                </div>

                <div class="product-description">
                    <p>@Model.Product.Summary</p>
                </div>

                <div class="product-variants">
                    <div class="variant-group">
                        <label>Renk Seçimi:</label>
                        <div class="color-options">
                            <div class="color-option active" style="background-color: #000000;" title="Siyah"></div>
                            <div class="color-option" style="background-color: #FFFFFF; border: 1px solid #ddd;" title="Beyaz"></div>
                            <div class="color-option" style="background-color: #FF0000;" title="Kırmızı"></div>
                            <div class="color-option" style="background-color: #0000FF;" title="Mavi"></div>
                        </div>
                    </div>

                    <div class="variant-group">
                        <label>Beden:</label>
                        <div class="size-options">
                            <div class="size-option">S</div>
                            <div class="size-option active">M</div>
                            <div class="size-option">L</div>
                            <div class="size-option sold-out">XL</div>
                        </div>
                    </div>
                </div>

                <div class="product-actions">
                    <div class="quantity-selector">
                        <button class="quantity-btn minus"><i class="fas fa-minus"></i></button>
                        <input type="text" class="quantity-input" value="1" min="1" max="10">
                        <button class="quantity-btn plus"><i class="fas fa-plus"></i></button>
                    </div>

                    <div class="action-buttons">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                            <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="add-cart-btn">
                                <i class="fas fa-shopping-cart"></i> Sepete Ekle
                            </button>
                        </form>
                        <button class="buy-now-btn">Hemen Satın Al</button>
                    </div>
                </div>

                <div class="product-extras">
                    <div class="extra-item">
                        <i class="fas fa-truck"></i>
                        <span>Hızlı Teslimat</span>
                    </div>
                    <div class="extra-item">
                        <i class="fas fa-undo"></i>
                        <span>15 Gün İade Garantisi</span>
                    </div>
                    <div class="extra-item">
                        <i class="fas fa-shield-alt"></i>
                        <span>Güvenli Ödeme</span>
                    </div>
                </div>

                <!-- Paylaşım Butonları -->
                <div class="social-share">
                    <span>Paylaş:</span>
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-pinterest"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-whatsapp"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ürün Detaylı Bilgi Tabları -->
    <div class="product-tabs mt-5">
        <ul class="nav nav-tabs" id="productTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Ürün Detayları</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="specs-tab" data-bs-toggle="tab" data-bs-target="#specs" type="button" role="tab" aria-controls="specs" aria-selected="false">Teknik Özellikler</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">Yorumlar (@await Component.InvokeAsync("RatingStars", new { productId = Model.Product.ProductId, Mode = "count" }) )</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="shipping-tab" data-bs-toggle="tab" data-bs-target="#shipping" type="button" role="tab" aria-controls="shipping" aria-selected="false">Kargo ve İade</button>
            </li>
        </ul>

        <div class="tab-content p-4" id="productTabContent">
            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                <div class="product-description-content">
                    <p>@Model.Product.Summary</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, urna eu tincidunt consectetur, nisi nunc pretium nunc, eget tincidunt nisl nunc eget nisl. Sed euismod, urna eu tincidunt consectetur, nisi nunc pretium nunc, eget tincidunt nisl nunc eget nisl.</p>
                    <ul>
                        <li>Yüksek kaliteli malzeme</li>
                        <li>Dayanıklı ve uzun ömürlü</li>
                        <li>Şık ve modern tasarım</li>
                        <li>Kolay temizleme</li>
                    </ul>
                </div>
            </div>

            <div class="tab-pane fade" id="specs" role="tabpanel" aria-labelledby="specs-tab">
                <div class="specs-table">
                    <div class="specs-row">
                        <div class="specs-title">Renk</div>
                        <div class="specs-value">Siyah, Beyaz, Kırmızı, Mavi</div>
                    </div>
                    <div class="specs-row">
                        <div class="specs-title">Malzeme</div>
                        <div class="specs-value">%100 Pamuk</div>
                    </div>
                    <div class="specs-row">
                        <div class="specs-title">Beden</div>
                        <div class="specs-value">S, M, L, XL</div>
                    </div>
                    <div class="specs-row">
                        <div class="specs-title">Ağırlık</div>
                        <div class="specs-value">250g</div>
                    </div>
                    <div class="specs-row">
                        <div class="specs-title">Üretim Yeri</div>
                        <div class="specs-value">Türkiye</div>
                    </div>
                    <div class="specs-row">
                        <div class="specs-title">Garanti</div>
                        <div class="specs-value">2 Yıl</div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                <!-- Yorum İstatistikleri -->
                @await Component.InvokeAsync("RatingStars", new { productId = Model.Product.ProductId, Mode = "ratings" })

                <!-- Yorum Listesi -->
                <div class="comments">
                    @foreach (var review in Model.UserReviews)
                    {
                        <div class="comment">
                            <div class="comment-avatar">
                                <img src="/images/profile.png" alt="User Avatar">
                            </div>
                            <div class="comment-content">
                                <div class="comment-header">
                                @using Microsoft.AspNetCore.Identity
                                @inject UserManager<Account> UserManager

                                    <strong>@((await UserManager.FindByIdAsync(review.UserId))?.UserName ?? "Bilinmeyen Kullanıcı")</strong>
                                    <div class="comment-date">@review.ReviewDate</div>
                                </div>
                                <div class="row">
                                    <div class="col col-md-11">
                                        <div class="comment-text">
                                            <p>@review.ReviewTitle</p>
                                        </div>
                                    </div>
                                    <div class="col col-md-1 d-flex align-items-center justify-content-center">

                                        <div class="comment-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="comment-text">
                                    <p>@review.ReviewText</p>
                                </div>
                                @if (review.ReviewPictureUrl != null && review.ReviewPictureUrl.Any())
                                {
                                    <div class="comment-photos">
                                        <img src="/images/comments/@review.ReviewPictureUrl" alt="Kullanıcı Fotoğrafı">
                                    </div>
                                }
                                <div class="comment-helpful">
                                    <span>Bu yorum faydalı oldu mu?</span>
                                    <button class="helpful-btn"><i class="far fa-thumbs-up"></i> Evet (1)</button>
                                    <button class="helpful-btn"><i class="far fa-thumbs-down"></i> Hayır (2)</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Yorum Yazma Formu -->
                <div class="write-review">

                    <h4>Yorum Yazın</h4>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form method="post" class="review-form" asp-action="Get" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Product.ProductId" />
                        <div class="form-group">
                            <label asp-for="UserReviewDtoForInsertion.ReviewTitle">Başlık</label>
                            <input asp-for="UserReviewDtoForInsertion.ReviewTitle" type="text" class="form-control" placeholder="Yorumunuz için başlık ekleyin">
                            <span asp-validation-for="UserReviewDtoForInsertion.ReviewTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserReviewDtoForInsertion.ReviewText">Yorumunuz</label>
                            <textarea asp-for="UserReviewDtoForInsertion.ReviewText" class="form-control" rows="3" placeholder="Ürün hakkında düşüncelerinizi paylaşın"></textarea>
                            <span asp-validation-for="UserReviewDtoForInsertion.ReviewText" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Puanınız</label>
                            <select asp-for="UserReviewDtoForInsertion.Rating" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="UserReviewDtoForInsertion.Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="admin-file-input-label">
                                <i class="fas fa-upload me-2"></i> Görsel Seçin
                                <input name="file" type="file" class="admin-file-input" id="imageInput" accept="image/*" />
                            </label>
                        </div>
                        <button type="submit" class="btn-submit-review">Yorumu Gönder</button>
                    </form>
                </div>
            </div>

            <div class="tab-pane fade" id="shipping" role="tabpanel" aria-labelledby="shipping-tab">
                <div class="shipping-info">
                    <h4>Kargo Bilgileri</h4>
                    <p>Siparişleriniz, ödeme onayından sonraki ilk iş günü içinde hazırlanıp kargoya verilmektedir.</p>
                    <ul>
                        <li>Standart teslimat süresi: 1-3 iş günü</li>
                        <li>Hızlı teslimat seçeneği: Aynı gün teslimat (saat 14:00'a kadar verilen siparişler için)</li>
                        <li>100 TL ve üzeri alışverişlerde kargo ücretsizdir</li>
                    </ul>

                    <h4>İade Koşulları</h4>
                    <p>Ürünü teslim aldığınız tarihten itibaren 15 gün içinde iade edebilirsiniz.</p>
                    <ul>
                        <li>Ürün kullanılmamış ve orijinal ambalajında olmalıdır</li>
                        <li>İade edeceğiniz ürünün yanında fatura ve irsaliye bulunmalıdır</li>
                        <li>İade kargo bedeli müşteriye aittir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Benzer Ürünler -->
    <div class="similar-products mt-5">
        <h3 class="section-title">Benzer Ürünler</h3>
        <div class="row g-3">
                <partial name="_ProductCardSmall" model="@Model.Product" />
                <partial name="_ProductCardSmall" model="@Model.Product" />
                <partial name="_ProductCardSmall" model="@Model.Product" />
                <partial name="_ProductCardSmall" model="@Model.Product" />
        </div>
    </div>
</div>
<style>
    /* Ana konteyner */
    .product-container {
        margin: 0 auto;
    }

    /* Breadcrumb */
    .breadcrumb {
        padding: 0.75rem 0;
        background-color: transparent;
        font-size: 0.85rem;
    }

    .breadcrumb-item a {
        color: #777;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .breadcrumb-item a:hover {
            color: #6366f1;
        }

    .breadcrumb-item.active {
        color: #444;
        font-weight: 500;
    }

    /* Ürün Galerisi */
    .main-image-container {
        position: relative;
        margin-bottom: 1.5rem;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
    }

    .main-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
        transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

        .main-image:hover {
            transform: scale(1.04);
        }

    .discount-tag {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(135deg, #ff7676, #f54ea2);
        color: white;
        border-radius: 50px;
        padding: 5px 12px;
        font-size: 0.75rem;
        font-weight: 600;
        box-shadow: 0 3px 10px rgba(245, 78, 162, 0.3);
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        line-height: 1.1;
    }

        .discount-tag span:first-child {
            font-size: 0.9rem;
        }

    .wishlist-icon {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: rgba(255, 255, 255, 0.9);
        color: #777;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 2;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

        .wishlist-icon:hover {
            background-color: #f54ea2;
            color: white;
            transform: scale(1.12) rotate(5deg);
        }

        .wishlist-icon i {
            font-size: 1.2rem;
        }

    .thumbnail-gallery {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        padding-bottom: 10px;
        scrollbar-width: none; /* Firefox */
    }

        .thumbnail-gallery::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Edge */
        }

    .thumbnail {
        width: 75px;
        height: 75px;
        object-fit: cover;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        opacity: 0.7;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

        .thumbnail:hover {
            opacity: 1;
            transform: translateY(-3px);
        }

        .thumbnail.active {
            border-color: #6366f1;
            opacity: 1;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

    /* Ürün Detayları */
    .product-details {
        padding: 0.5rem 1rem 1rem;
    }

    .product-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.8rem;
        font-size: 0.85rem;
        color: #888;
    }

    .product-availability.in-stock {
        color: #10b981;
        font-weight: 500;
    }

        .product-availability.in-stock i {
            margin-right: 4px;
        }

    .product-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #333;
        line-height: 1.2;
    }

    .productdetail-rating {
        display: flex;
        align-items: center;
        margin-bottom: 1.2rem;
    }

    .star-rating {
        display: flex;
        margin-right: 0.5rem;
    }

        .star-rating i {
            color: #facc15;
            font-size: 1rem;
            margin-right: 0.15rem;
        }

    .rating-count {
        font-size: 0.9rem;
        color: #777;
    }

    .product-price-container {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .productdetail-old-price {
        text-decoration: line-through;
        color: #999;
        font-size: 1.1rem;
        margin-right: 0.8rem;
    }

    .product-price {
        font-size: 1.9rem;
        font-weight: 700;
        color: #f43f5e;
        margin-right: 0.8rem;
    }

    .price-discount {
        background-color: rgba(244, 63, 94, 0.1);
        color: #f43f5e;
        padding: 0.25rem 0.6rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .product-description {
        margin-bottom: 1.8rem;
        color: #666;
        line-height: 1.7;
        border-bottom: 1px solid #f0f0f0;
        padding-bottom: 1.8rem;
    }

    /* Ürün Varyantları */
    .product-variants {
        margin-bottom: 1.8rem;
    }

    .variant-group {
        margin-bottom: 1.4rem;
    }

        .variant-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.7rem;
            color: #444;
        }

    .color-options {
        display: flex;
        gap: 12px;
    }

    .color-option {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        cursor: pointer;
        position: relative;
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

        .color-option:hover {
            transform: scale(1.15);
        }

        .color-option.active:after {
            content: '';
            position: absolute;
            top: -4px;
            left: -4px;
            right: -4px;
            bottom: -4px;
            border: 2px solid #6366f1;
            border-radius: 50%;
        }

    .size-options {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }

    .size-option {
        min-width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .size-option:hover {
            border-color: #6366f1;
            color: #6366f1;
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(99, 102, 241, 0.15);
        }

        .size-option.active {
            background-color: #6366f1;
            border-color: #6366f1;
            color: white;
            box-shadow: 0 5px 12px rgba(99, 102, 241, 0.3);
        }

        .size-option.sold-out {
            background-color: #f9fafb;
            border-color: #e5e7eb;
            color: #aaa;
            cursor: not-allowed;
            position: relative;
        }

            .size-option.sold-out:after {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                border-top: 1px solid #ccc;
                transform: rotate(-45deg);
            }

    /* Ürün Aksiyonları */
    .product-actions {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        margin-bottom: 1.8rem;
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        height: 48px;
        max-width: 150px;
        border: 1px solid #e5e7eb;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 3px 8px rgba(0,0,0,0.05);
    }

    .quantity-btn {
        width: 48px;
        height: 100%;
        background-color: #f9fafb;
        border: none;
        color: #444;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .quantity-btn:hover {
            background-color: #e5e7eb;
        }

    .quantity-input {
        flex: 1;
        height: 100%;
        border: none;
        text-align: center;
        font-size: 1rem;
        color: #444;
        -moz-appearance: textfield;
        background-color: #fff;
    }

        .quantity-input::-webkit-outer-spin-button,
        .quantity-input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .add-cart-btn,
    .buy-now-btn {
        flex: 1;
        height: 48px;
        border: none;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 24px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

