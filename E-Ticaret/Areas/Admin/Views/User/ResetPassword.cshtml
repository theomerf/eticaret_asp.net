@model ResetPasswordDto
<div class="adminuser-container">
	<div class="adminuser-card">
		<div class="adminuser-header">
			<div class="adminuser-security-icon">
				<i class="fas fa-key"></i>
			</div>
			<h1 class="adminuser-title">Şifre Sıfırlama</h1>
			<p class="adminuser-subtitle">@Model?.UserName</p>
		</div>

		<div class="adminuser-form">
			@if (ViewData.ModelState.ErrorCount > 0)
			{
				<div class="adminuser-validation-summary">
					<div class="text-danger" asp-validation-summary="All"></div>
				</div>
			}

			<form method="post" asp-action="ResetPassword">
				<input type="hidden" asp-for="UserName" />

				<div class="adminuser-form-group">
					<label asp-for="Password" class="adminuser-form-label"><i class="fas fa-key"></i> Yeni Şifre</label>
					<input asp-for="Password" type="password" class="adminuser-form-control" placeholder="Yeni şifre giriniz" id="password" />
					<span class="adminuser-password-toggle" onclick="togglePassword('password')">
						
					</span>
				</div>

				<div class="adminuser-form-group">
					<label asp-for="ConfirmPassword" class="adminuser-form-label"><i class="fas fa-key"></i> Şifre Tekrar</label>
					<input asp-for="ConfirmPassword" type="password" class="adminuser-form-control" placeholder="Şifreyi tekrar giriniz" id="confirmPassword" />
					<span class="adminuser-password-toggle" onclick="togglePassword('confirmPassword')">
						
					</span>
				</div>

				<div class="adminuser-password-requirements">
					<h5><i class="fas fa-shield-alt me-1"></i>Şifre gereksinimleri:</h5>
					<div class="adminuser-requirement-item">
						<span class="adminuser-requirement-icon"><i class="fas fa-circle"></i></span>
						En az 8 karakter uzunluğunda olmalı
					</div>
					<div class="adminuser-requirement-item">
						<span class="adminuser-requirement-icon"><i class="fas fa-circle"></i></span>
						En az bir büyük harf içermeli
					</div>
					<div class="adminuser-requirement-item">
						<span class="adminuser-requirement-icon"><i class="fas fa-circle"></i></span>
						En az bir küçük harf içermeli
					</div>
					<div class="adminuser-requirement-item">
						<span class="adminuser-requirement-icon"><i class="fas fa-circle"></i></span>
						En az bir sayı içermeli
					</div>
					<div class="adminuser-requirement-item">
						<span class="adminuser-requirement-icon"><i class="fas fa-circle"></i></span>
						En az bir özel karakter içermeli (!#$%^&*)
					</div>
				</div>

				<div class="adminuser-btn-group mt-3">
					<button type="submit" class="adminuser-btn adminuser-btn-primary">
						<i class="fas fa-check me-1"></i> Şifreyi Güncelle
					</button>
					<a asp-action="Index" class="adminuser-btn adminuser-btn-outline">
						<i class="fas fa-arrow-left me-1"></i> Geri Dön
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	function togglePassword(inputId) {
		const input = document.getElementById(inputId);
		const icon = input.nextElementSibling.querySelector('i');

		if (input.type === 'password') {
			input.type = 'text';
			icon.classList.remove('fa-eye');
			icon.classList.add('fa-eye-slash');
		} else {
			input.type = 'password';
			icon.classList.remove('fa-eye-slash');
			icon.classList.add('fa-eye');
		}
	}
</script>
