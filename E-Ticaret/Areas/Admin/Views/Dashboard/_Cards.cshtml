<div class="container-fluid py-4">
    <h2 class="mb-4 text-center fw-bold">Admin Gösterge Paneli</h2>

    <!-- Summary Cards - First Row -->
    <div class="row g-4 mb-4">
        <!-- Products Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body p-0">
                    <div style="background: linear-gradient(45deg, #6a11cb, #2575fc)" class="text-white p-3 rounded-top dashboard-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Ürünler</h5>
                                <small>Toplam Ürünler</small>
                            </div>
                            <div class="fs-1">
                                <i class="fas fa-box"></i>
                            </div>
                        </div>
                        <h2 class="mt-3 mb-0">
                            @await Component.InvokeAsync("ProductSummary")
                        </h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-primary">Ürünler</a>
                            <a asp-controller="Product" asp-action="Create" class="btn btn-sm" style="background: linear-gradient(45deg, #6a11cb, #2575fc); color: white;">
                                <i class="fas fa-plus me-1"></i>Yeni Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body p-0">
                    <div style="background: linear-gradient(45deg, #ff5858, #f09819)" class="text-white p-3 rounded-top dashboard-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Kategoriler</h5>
                                <small>Ürün Kategorileri</small>
                            </div>
                            <div class="fs-1">
                                <i class="fas fa-tags"></i>
                            </div>
                        </div>
                        <h2 class="mt-3 mb-0">
                            @await Component.InvokeAsync("CategorySummary")
                        </h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-sm btn-outline-danger">Kategoriler</a>
                            <a asp-controller="Category" asp-action="Create" class="btn btn-sm" style="background: linear-gradient(45deg, #ff5858, #f09819); color: white;">
                                <i class="fas fa-plus me-1"></i>Yeni Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body p-0">
                    <div style="background: linear-gradient(45deg, #11998e, #38ef7d)" class="text-white p-3 rounded-top dashboard-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Üyeler</h5>
                                <small>Kayıtlı Üyeler</small>
                            </div>
                            <div class="fs-1">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                        <h2 class="mt-3 mb-0">
                            @await Component.InvokeAsync("UserSummary")
                        </h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-between">
                            <a asp-controller="User" asp-action="Index" class="btn btn-sm btn-outline-success">Üyeler</a>
                            <a asp-controller="User" asp-action="Create" class="btn btn-sm" style="background: linear-gradient(45deg, #11998e, #38ef7d); color: white;">
                                <i class="fas fa-plus me-1"></i>Yeni Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 dashboard-card">
                <div class="card-body p-0">
                    <div style="background: linear-gradient(45deg, #FF8008, #FFC837)" class="text-white p-3 rounded-top dashboard-card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">Siparişler</h5>
                                <small>Gönderimde Olan</small>
                            </div>
                            <div class="fs-1">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                        </div>
                        <h2 class="mt-3 mb-0">
                            @await Component.InvokeAsync("OrderInProgress")
                        </h2>
                    </div>
                    <div class="p-3">
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-outline-warning w-100">Siparişleri Yönet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Section -->
    <div class="row g-4 mb-4">
        <!-- Sales Chart -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header py-3" style="background: linear-gradient(45deg, #6a11cb, #2575fc); color: white;">
                    <h5 class="mb-0">Sales Analytics</h5>
                </div>
                <div class="card-body">
                    <div style="height: 300px;" class="d-flex align-items-center justify-content-center">
                        <!-- Placeholder for sales chart -->
                        <div class="text-center text-secondary">
                            <i class="fas fa-chart-line fa-4x mb-3"></i>
                            <p>Sales statistics will be displayed here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header py-3" style="background: linear-gradient(45deg, #6a11cb, #2575fc); color: white;">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="activity-list">
                        <div class="activity-item d-flex align-items-center py-2 border-bottom">
                            <div class="bg-primary text-white rounded-circle p-2 me-3">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                            <div>
                                <p class="mb-0">New order received</p>
                                <small class="text-muted">30 minutes ago</small>
                            </div>
                        </div>
                        <div class="activity-item d-flex align-items-center py-2 border-bottom">
                            <div class="bg-success text-white rounded-circle p-2 me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <p class="mb-0">New user registered</p>
                                <small class="text-muted">1 hour ago</small>
                            </div>
                        </div>
                        <div class="activity-item d-flex align-items-center py-2">
                            <div class="bg-warning text-white rounded-circle p-2 me-3">
                                <i class="fas fa-box"></i>
                            </div>
                            <div>
                                <p class="mb-0">Product stock updated</p>
                                <small class="text-muted">3 hours ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Links -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 category-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light p-3 d-inline-block mb-3">
                        <i class="fas fa-box-open fa-2x text-primary"></i>
                    </div>
                    <h5 class="mb-2">Inventory Management</h5>
                    <p class="text-muted">Manage your product stock and inventory levels</p>
                    <a href="#" class="btn btn-sm" style="background: linear-gradient(45deg, #6a11cb, #2575fc); color: white;">
                        Access Inventory
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 category-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light p-3 d-inline-block mb-3">
                        <i class="fas fa-truck fa-2x text-danger"></i>
                    </div>
                    <h5 class="mb-2">Shipping & Delivery</h5>
                    <p class="text-muted">Track shipments and manage delivery settings</p>
                    <a href="#" class="btn btn-sm" style="background: linear-gradient(45deg, #ff5858, #f09819); color: white;">
                        Access Shipping
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 category-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-light p-3 d-inline-block mb-3">
                        <i class="fas fa-chart-pie fa-2x text-success"></i>
                    </div>
                    <h5 class="mb-2">Reports & Analytics</h5>
                    <p class="text-muted">View sales reports and business analytics</p>
                    <a href="#" class="btn btn-sm" style="background: linear-gradient(45deg, #11998e, #38ef7d); color: white;">
                        View Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>