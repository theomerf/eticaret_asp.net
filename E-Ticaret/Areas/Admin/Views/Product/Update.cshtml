@model ProductDtoForUpdate

<div class="text-center">
	<div class="display-6 my-4">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

	<div class="text-danger" asp-validation-summary="All"></div>

	<input type="hidden" asp-for="ProductId"/>

	<div class="form-group my-3">
		<label asp-for="MainCategoryId">Kategori</label>
		<select class="form-control" asp-items="@ViewBag.MainCategories" asp-for="MainCategoryId">
		</select>
	</div>

	<div class="form-group my-3">
		<label asp-for="SubCategoryId">Alt Kategori</label>
		<select class="form-control" asp-items="@ViewBag.SubCategories" asp-for="SubCategoryId">
		</select>
	</div>

	<div class="form-group my-3">
		<label asp-for="ProductName">Ürün Adı</label>
		<input asp-for="ProductName" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Summary">Açıklama</label>
		<input asp-for="Summary" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="ActualPrice">Fiyat</label>
		<input asp-for="ActualPrice" class="form-control" />
	</div>
	<div class="form-group my-3">
		<label asp-for="DiscountPrice">İndirim Fiyatı(Varsa)</label>
		<input asp-for="DiscountPrice" class="form-control" />
	</div>

	<div class="form-check form-switch">
		<input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
		<label class="form-check-label" for="flexSwitchCheckDefault">Öne Çıkar</label>
	</div>

	<div class="form-group my-3">
		<img class="rounded shadow" width="150" src="/images/@Model.ImageUrl"/>
	</div>

	<input type="hidden" asp-for="ImageUrl" />

	<div class="form-group my-3">
		<label asp-for="ImageUrl">Fotoğraf</label>
		<input name="file" type="file" class="form-control"/>
	</div>

	<div class="form-group my-3">
		<div class="btn-group">
			<button class="btn btn-primary" type="submit">
				<i class="fa fa-save"></i>
				Update
			</button>
			<a asp-action="Index" class="btn btn-outline-primary">
				<i class="fa fa-list"></i>
				Product
			</a>
		</div>

	</div>
</form>